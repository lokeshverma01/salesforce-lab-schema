{
  "openapi": "3.0.0",
  "info": {
    "title": "Salesforce Account REST API",
    "version": "1.0.0",
    "description": "REST API to fetch Salesforce Account details"
  },
  "servers": [
    {
      "url": "https://REPLACE_WITH_ORG2_INSTANCE/services/apexrest",
      "description": "Salesforce Org 2 API Server"
    }
  ],
  "paths": {
    "/api/Account": {
      "get": {
        "operationId": "getAccount",
        "summary": "Get Account",
        "description": "Returns the first available Account with basic details",
        "responses": {
          "200": {
            "description": "Account object returned successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Account"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Account": {
        "type": "object",
        "title": "Account",
        "properties": {
          "Id": {
            "type": "string",
            "description": "Account unique identifier",
            "example": "001xx000003DHP"
          },
          "Name": {
            "type": "string",
            "description": "Account name",
            "example": "Acme Corp"
          },
          "Phone": {
            "type": "string",
            "description": "Account phone number",
            "example": "+1 415 555 1234",
            "nullable": true
          },
          "Website": {
            "type": "string",
            "description": "Account website",
            "example": "https://www.acme.com",
            "nullable": true
          }
        },
        "required": ["Id", "Name"],
        "additionalProperties": false
      }
    }
  }
}
