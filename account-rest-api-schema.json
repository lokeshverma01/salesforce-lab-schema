  "paths": {
    "/api/Account": {
      "get": {
        "operationId": "getAccount",
        "summary": "Get Account",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Account"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Account": {
        "type": "object",
        "properties": {
          "Id": { "type": "string" },
          "Name": { "type": "string" },
          "Phone": { "type": "string", "nullable": true },
          "Website": { "type": "string", "nullable": true }
        },
        "required": ["Id", "Name"]
      }
    }
  }
